{
  "name": "@curbonomix/lms",
  "version": "0.1.0",
  "private": true,
  "description": "Shared agent/task interfaces for Curbonomix",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./src/*": "./src/*"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsup src/index.ts --dts --format cjs,esm --clean",
    "dev": "tsup src/index.ts --watch --dts --format cjs,esm",
    "lint": "eslint \"src/**/*.{ts,tsx}\""
  },
  "devDependencies": {
    "tsup": "^8.0.1",
    "typescript": "^5.5.0",
    "eslint": "^9.0.0",
    "rimraf": "^5.0.0"
  },
  "engines": {
    "node": ">=18.17"
  },
  "sideEffects": false
}
